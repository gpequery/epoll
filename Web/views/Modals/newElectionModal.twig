<div class="modal fade" id="modal-new-election" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Nouvelle élection</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">X</span>
                </button>
            </div>
            <div class="modal-body ml-auto mr-auto">
                <input type="text" name="election_name" placeholder="Libellé de l'élection" class="text-center"/>
            </div>
            <label class="description" for="element_2">Début de la période de candidature :</label>
            <div  class="modal-body ml-auto mr-auto">
                <input type="date" name="election_start_candidate">
            </div>
            <label class="description" for="element_3">Fin de la période de candidature :</label>
            <div  class="modal-body ml-auto mr-auto">
                <input type="date" name="election_end_candidate">
            </div>
            <label class="description" for="element_4">Début de la période de vote :</label>
            <div  class="modal-body ml-auto mr-auto">
                <input type="date" name="election_start_vote">
            </div>
            <label class="description" for="element_5">Fin de la période de vote :</label>
            <div  class="modal-body ml-auto mr-auto">
                <input type="date" name="election_end_vote">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary submit">Ajouter</button>
            </div>
        </div>
    </div>
</div>
